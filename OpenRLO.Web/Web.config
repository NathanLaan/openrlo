      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  
  <applicationSettings>
    <OpenRLO.Web.Properties.Settings>
      <setting name="FlexDebug" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="FlexDetectMobile" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="DateTimeFormatString" serializeAs="String">
        <value>MMM dd</value>
      </setting>
      <setting name="PageSizeIndex" serializeAs="String">
        <value>10</value>
      </setting>
      <setting name="PageSizeCategory" serializeAs="String">
        <value>10</value>
      </setting>
      <setting name="SiteVersion" serializeAs="String">
        <value>0.3.1</value>
      </setting>
    </OpenRLO.Web.Properties.Settings>
  </applicationSettings>
  <system.codedom>
    <compilers>
      <compiler language="c#;cs;csharp" extension=".cs" type="Microsoft.CSharp.CSharpCodeProvider, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" warningLevel="4">
        <providerOption name="CompilerVersion" value="v3.5"/>
        <providerOption name="WarnAsError" value="false"/>
      </compiler>
    </compilers>
